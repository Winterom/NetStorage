<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientGUI.SetupFrmController">

    <VBox spacing="5">
        <Label text="Расположение папки для синхронизации " />
        <HBox spacing="2">
            <TextField HBox.hgrow="ALWAYS" />
            <Button text="..." />
        </HBox>
        <Label text="Параметры аутентификации" />
        <HBox spacing="3">
            <Label text="Логин  " />
            <TextField HBox.hgrow="ALWAYS" />
        </HBox>
        <HBox spacing="3">
            <Label text="Пароль" />
            <PasswordField HBox.hgrow="ALWAYS" />
        </HBox>
        <HBox spacing="5" alignment="BASELINE_RIGHT">
            <Button text="Сохранить" />
            <Button text="Отмена" />
        </HBox>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </VBox>
</AnchorPane>
